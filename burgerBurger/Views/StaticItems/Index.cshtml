@model IEnumerable<burgerBurger.Models.StaticItem>

@{
    ViewData["Title"] = "Menu Items";
}

<h1 class="text-white">Menu Items</h1>

<p>
    <a asp-action="Create" class="text-white">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th class="text-white">
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th class="text-white">
                @Html.DisplayNameFor(model => model.Type)
            </th>
            <th class="text-white">
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th class="text-white">
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th class="text-white">
                @Html.DisplayNameFor(model => model.discountPercentage)
            </th>
            <th class="text-white">
                @Html.DisplayNameFor(model => model.totalCalories)
            </th>
            <th class="text-white">
                @Html.DisplayNameFor(model => model.Photo)
            </th>
            <th class="text-white"></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td class="text-white">
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td class="text-white">
                @Html.DisplayFor(modelItem => item.Type)
            </td>
            <td class="text-white">
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td class="text-white">
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td class="text-white">
                @Html.DisplayFor(modelItem => item.discountPercentage)
            </td>
            <td class="text-white">
                @Html.DisplayFor(modelItem => item.totalCalories)
            </td>
            <td class="text-white">
                @if (item.Photo != null)
                {
                    <img src="~/img/staticItems/@item.Photo" alt="Product Photo" class="thumb" />
                }
                else
                {
                    <p class="text-white">N/A</p>
                }
            </td>
            <td class="text-white">
                    <a asp-action="Edit" asp-route-id="@item.Id" class="text-white">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id" class="text-white">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id" class="text-white">Delete</a> |
                    @if (item.IsSelling)
                    {
                        <a asp-action="RemoveFromStorefront" asp-route-id="@item.Id" class="text-white">Take Off Storefront</a>
                    }
                    else
                    {
                        <a asp-action="AddBackToStorefront" asp-route-id="@item.Id" class="text-white">Add Back To Storefront</a>
                    }
                </td>
        </tr>
}
    </tbody>
</table>
