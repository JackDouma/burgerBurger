@using Microsoft.AspNetCore.Identity
@using burgerBurger.Models
@using burgerBurger.Data
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@{

    ViewData["Title"] = "Your Account";
}

<ul>
    <li class="nav-item">
        <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Manage Account</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-dark" asp-controller="BalanceAdditions" asp-action="Index">Add Funds to Balance</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-dark" asp-controller="GiftCards" asp-action="Create">Purchase Gift Card</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-dark" asp-controller="GiftCards" asp-action="Redeem">Redeem Gift Card</a>
    </li>
    @if (User.IsInRole("Admin") || User.IsInRole("Owner"))
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-controller="UserManagement" asp-action="Index">Manage Users</a>
        </li>
    }
</ul>



