@model burgerBurger.Models.GiftCard

@{
    ViewData["Title"] = "Buy Giftcard";
}

<h1 class="text-white">Buy Giftcard</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="text-white" asp-for="amount" class="control-label"></label>
                <select asp-for="amount" class="form-control">
                    <option value="10">$10</option>
                    <option value="20">$20</option>
                    <option value="50">$50</option>
                    <option value="100">$100</option>
                </select>
                <span asp-validation-for="amount" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label for="giftPhoneNumber" class="text-white">Phone Number to Send To</label>
                <input type="text" name="giftPhoneNumber" class="form-control" />
            </div>

            <div class="form-group">
                <input type="submit" value="Purchase" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<br />
<button class="btn btn-secondary">
    <a asp-controller="Home" asp-action="Account" class="text-white">Back</a>
</button>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
