@model IEnumerable<CustomItem>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<iframe width="110" height="200" src="https://www.myinstants.com/instant/vine-boom-sound-70972/embed/" frameborder="0" scrolling="no"></iframe>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.totalCalories)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Photo)
            </th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.totalCalories)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Photo)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
            <td>
                    <form method="post" asp-controller="Shop" asp-action="AddToCart" style="display: flex;align-items: center;justify-content: center;">
                        @Html.AntiForgeryToken()
                        <fieldset>
                            <label for="Quantity">Quantity: </label>
                            <input name="Quantity" required type="number" min="1" max="999" class="small-input" />
                        </fieldset>
                        <input name="ItemId" type="hidden" value="@item.Id" />
                        <button class="btn btn-primary m-3">Add to Cart</button>
                    </form>
            </td>
        </tr>
}
    </tbody>
</table>
